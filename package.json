{
  "name": "formbuilder-cms",
  "version": "1.0.0",
  "description": "Professional visual form builder system in pure JavaScript (ES6+) with drag-and-drop editor, schema engine, rule engine, and live preview",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./builder": "./src/builder/FormBuilder.js",
    "./renderer": "./src/renderer/FormRenderer.js",
    "./schema": "./src/schema/SchemaEngine.js",
    "./engine": "./src/engine/RuleEngine.js",
    "./validation": "./src/engine/ValidationEngine.js",
    "./state": "./src/core/StateManager.js",
    "./events": "./src/core/EventBus.js"
  },
  "keywords": [
    "form",
    "builder",
    "visual-builder",
    "drag-and-drop",
    "schema",
    "validation",
    "rule-engine",
    "javascript",
    "es6",
    "framework-agnostic",
    "no-dependencies"
  ],
  "author": "FormBuilder Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/formbuilder-cms.git"
  },
  "devDependencies": {},
  "dependencies": {},
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "python -m http.server 8000",
    "serve": "python3 -m http.server 8000",
    "build": "echo 'No build step required - pure ES6 modules'",
    "test": "echo 'Add test script'",
    "lint": "echo 'Add linting script'"
  },
  "files": [
    "src/",
    "styles.css",
    "index.html",
    "README.md",
    "examples/"
  ]
}
